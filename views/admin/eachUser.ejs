<%- include('adminPartials/head')%>

<body class="inner_page profile_page">
<div class="full_container">
    <div class="inner_container">
        <!-- Sidebar  -->
        <%- include('adminPartials/sidebar')%>
        <!-- end sidebar -->
        <!-- right content -->
        <div id="content">
            <!-- topbar -->
            <%- include('adminPartials/adminBar')%>
            <!-- end topbar -->
            <!-- dashboard inner -->
            <div class="midde_cont">
                <div class="container-fluid">
                    <div class="row column_title">
                        <div class="col-md-12">
                            <div class="page_title"></div>
                        </div>
                    </div>
                    <!-- row -->
                    <div class="row column1">
                        <div class="col-md-2"></div>
                        <div class="col-md-8">
                            <div class="white_shd full margin_bottom_30">
                                <div class="full graph_head">
                                    <div class="heading1 margin_0">
                                        <h2><%=jina%></h2>
                                    </div>
                                </div>
                                <div class="full price_table padding_infor_info">
                                    <div class="row">
                                        <!-- user profile section -->
                                        <!-- profile image -->
                                        <div class="col-lg-12">
                                            <div class="full dis_flex center_text">
                                                <div class="profile_img"><img width="180" class="rounded-circle" src="/images/layout_img/faceless.jpg" alt="#" /></div>
                                                <div class="profile_contant">
                                                    <div class="contact_inner">
                                                        <h3><%=user.clientType%></h3>
                                                        <%if(user.clientType === "Organization"){%>
                                                        <h4><strong>Field of Business: </strong><%=user.occupation%></h4>
                                                        <%} else {%>
                                                        <h4><strong>Occupation: </strong><%=user.occupation%></h4>
                                                        <%}%>

                                                        <ul class="list-unstyled">
                                                            <h5><i class="fa fa-envelope-o"></i> : <%=user.username%></h5>
                                                            <h5><i class="fa fa-phone"></i> : <%=user.phoneNumber%></h5>
                                                            <%if(user.clientType !== "Individual"){%>
                                                            <h5><i class="fa fa-credit-card"></i> KRA PIN: <%=user.kraPin%></h5>
                                                            <%}%>
                                                        </ul>
                                                    </div>

                                                </div>
                                            </div>
                                            <!-- profile contant section -->
                                            <div class="full inner_elements margin_top_30">
                                                <div class="tab_style2">
                                                    <div class="tabbar">
                                                        <nav>
                                                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                                                <%if(user.clientType === "Individual"){%>
                                                                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#credentials" role="tab" aria-selected="true">Public Credentials</a>
                                                                <%} else {%>
                                                                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#credentials" role="tab" aria-selected="true">Uploaded Folders</a>
                                                                <%}%>
                                                                <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#addresses" role="tab" aria-selected="false">Addresses</a>
                                                            </div>
                                                        </nav>
                                                        <div class="tab-content" id="nav-tabContent">
                                                            <div class="tab-pane fade show active" id="credentials" role="tabpanel" aria-labelledby="nav-home-tab">
                                                                <%if(user.clientType === "Individual"){%>
                                                                <div class="msg_list_main">
                                                                    <ul class="msg_list">
                                                                        <li>
                                                                            <span>
                                                               <span class="name_user"><strong>ID Number: </strong><%=user.idNumber%></span>

                                                               </span>
                                                                        </li>
                                                                        <li>
                                                                            <span>
                                                               <span class="name_user"><strong>Passport Number: </strong><%=user.passportNumber%></span>
                                                               </span>
                                                                        </li>

                                                                    </ul>
                                                                </div>
                                                                <%} else {%>
                                                                <div class="row">
                                                                <%for(const item of user.files){%>
                                                                <div class="col-lg-3 col-md-6 col-sm-12">
                                                                    <div class="folder_icon">
                                                                        <a href="/download/orgFiles/<%=item.filename%>"><i class="fa fa-folder fa-5x red_color" aria-hidden="true"></i></a>
                                                                    </div>
                                                                    <div class="folder_name"><%=item.filename%></div>
                                                                </div>
                                                                <%}%>
                                                                </div>
                                                                <%}%>
                                                            </div>
                                                            <div class="tab-pane fade" id="addresses" role="tabpanel" aria-labelledby="nav-profile-tab">
                                                                <div class="msg_list_main">
                                                                    <ul class="msg_list">
                                                                        <li>
                                                                            <span>
                                                               <span class="name_user"><strong>Postal Address: </strong><%=user.postalAddress%></span>

                                                               </span>
                                                                        </li>
                                                                        <li>
                                                                            <span>
                                                               <span class="name_user"><strong>Physical Address: </strong><%=user.physicalAddress%></span>
                                                               </span>
                                                                        </li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- end user profile section -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2"></div>
                        </div>
                        <!-- end row -->
                    </div>
                    <!-- footer -->
                </div>
                <!-- end dashboard inner -->
            </div>
        </div>
    </div>
</div>

<%- include('adminPartials/foot')%>