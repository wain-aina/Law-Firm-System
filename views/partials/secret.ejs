<form method="post" action="/admin">
    <div class="form-group mt-2">
        <input type="password" name="username" class="form-style" placeholder="Identity" id="logpass" autocomplete="off">
        <i class="input-icon uil uil-lock-alt"></i>
    </div>
    <div class="form-group mt-2">
        <input type="password" name="password" class="form-style" placeholder="Code" id="confirmpass" autocomplete="off" required>
        <i class="input-icon uil uil-lock-alt"></i>
    </div>
    <div class="form-group mt-2">
        <input type="hidden" name="formType" value="admin">
    </div>
    <button type="submit" class="btn mt-4">Verify</button>
</form>