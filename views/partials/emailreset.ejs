<form method="post" action="/reset/<%=token%>">
    <div class="form-group mt-2">
        <input type="password" name="password" class="form-style" placeholder="Your Password" id="logpass" autocomplete="off">
        <i class="input-icon uil uil-lock-alt"></i>
    </div>
    <div class="form-group mt-2">
        <input type="password" name="confirm" class="form-style" placeholder="Confirm Password" id="confirmpass" autocomplete="off" required>
        <i class="input-icon uil uil-lock-alt"></i>
    </div>
    <div class="form-group mt-2">
        <input type="hidden" name="formType" value="reset">
    </div>
    <button type="submit" class="btn mt-4">Reset Password</button>
</form>